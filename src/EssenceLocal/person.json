{ "TABLE":
    { "person":
        { "id":
            { "type": "BIGSERIAL"
            , "constraint": "PRIMARY KEY"
            }
        , "first_name":
            { "type": "VARCHAR(50)"
            , "null": "NOT NULL"
            }
        , "last_name":
            { "type": "VARCHAR(50)"
            , "null": "NOT NULL"
            }
        , "date_of_creation":
            { "type": "DATE"
            , "default": "DEFAULT CURRENT_DATE"
            }
        , "avatar":
            { "type": "VARCHAR(50)"
            , "default": "DEFAULT 'https://oppai-dragon.site/images/avatar.jpg'"
            }
        , "is_admin":
            { "type": "BOOLEAN"
            , "default": "DEFAULT FALSE"
            }
        , "access_key":
            { "type": "UUID"
            , "default": "DEFAULT gen_random_uuid()"
            }
        }
    }
}