{ "TABLE":
    { "news":
        { "id":
            { "type": "BIGSERIAL"
            , "constraint": "PRIMARY KEY"
            }
        , "draft_id":
            { "type": "INT"
            , "null": "NOT NULL"
            , "constraint": "UNIQUE"
            }
        , "name":
            { "type": "VARCHAR(50)"
            , "null": "NOT NULL"
            }
        , "date_of_creation":
            { "type": "DATE"
            , "default": "CURRENT_DATE"
            }
        , "author_id":
            { "type": "INT"
            , "null": "NOT NULL"
            , "relations": "REFERENCES author (id)"
            }
        , "category_id":
            { "type": "INT"
            , "null": "NOT NULL"
            , "relations": "REFERENCES category (id)"
            }
        , "tag_ids":
            { "type": "INTEGER[]"
            }
        , "content":
            { "type": "TEXT"
            , "null": "NOT NULL"
            }
        , "main_photo":
            { "type": "VARCHAR(50)"
            }
        , "optional_photos":
            { "type": "VARCHAR(50)[]"
            }
        }
    }
}